<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>Produtos</title>
</head>
<style>
    .btn-warning {
        color: #ffffff;
    }
    
    .btn-warning:hover {
        cursor: pointer;
    }
    
    th,
    td {
        text-align: center;
    }
</style>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><strong>Produtos</strong></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                </ul>
                <div class="d-flex">
                    <a class="btn btn-outline-success" href="/cadastrar">Adicionar Produto</a>
                </div>
            </div>
        </div>
    </nav>

    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Marca</th>
                <th>Valor</th>
                <th>quantidade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% produtos.map(produto => {%>
                <tr>
                    <td>
                        <%= produto.codigo %>
                    </td>
                    <td>
                        <%= produto.nome %>
                    </td>
                    <td>
                        <%= produto.marca %>
                    </td>
                    <td>
                        <%= produto.valor %>
                    </td>
                    <td>
                        <%= produto.quantidade %>
                    </td>
                    <td>
                        <a type="button" class="btn btn-link btn-sm" href="/editar/<%= produto.id %>">Editar</a>
                        <a type="button" class="btn btn-warning btn-sm" href="/<%= produto.id %>" onclick="return confirm('Deseja mesmo excluir esse produto?')">Excluir</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

</body>

</html>